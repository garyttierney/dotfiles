# -*- Mode: muttrc -*-

# Caches
set header_cache='~/.mutt/.cache/headercache'
set message_cachedir='~/.mutt/.cache/messagecache'
set certificate_file='~/.mutt/.cache/certificates'

# Automatic viewing html
auto_view text/html
alternative_order text/plain text/enriched text/html 

# Sync and check intervals
set read_inc = 100
set mail_check = 90
set timeout = 15

# Futher config
set tmpdir=~/.mutt/tmp
set mailcap_path=~/.mutt_config/mailcap
set abort_nosubject = ask-yes
set abort_unmodified = yes
set delete = ask-yes
set editor='vim + -c "setlocal textwidth=72 fo+=aw"'
set content_type = 'text/plain'
set mark_old = no
set sort = threads
set sort_aux = reverse-last-date-received
set pager_index_lines = 15
